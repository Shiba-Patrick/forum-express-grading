<div class="container">
  <div class="row">
    <div class="col">
      {{#if user.image}}
      <img class="img" src="{{user.image}}"
        style="width: 300px;">
      {{else}}
      <img class="img" src="https://i.imgur.com/eW5xFxj.jpeg"
        style="width: 300px">
      {{/if}}
    </div>
    <div class="col-8 mt-5">
      <h5><strong>名稱:{{user.name}}</strong></h5>
      <h5><strong>信箱:{{user.email}}</strong></h5>
      <p class="card-text">{{comments.length}} 已評論餐廳</p>
      <p class=>{{user.FavoritedRestaurants.length}} 已收藏的餐廳</p>
      <p class=>{{user.Followings.length}} followings (追蹤者)</p>
      <p class=>{{user.Followers.length}} followers (追隨者)</p>
    </div>
    <button type="button" class="btn btn-link">
      <a class="btn btn-success" href="/users/{{user.id}}/edit">編輯</a>
      <a class="btn btn-info" href="javascript:history.back()">返回</a>
    </button>
  </div>
</div>

<div class="row">
  <div class="col-6">

    {{!-- Following --}}
    <div class="card mx-auto mt-3">
      <div class="card-header">
        {{user.Followings.length}} followings (追蹤者)
      </div>
      <div class="card-body">
        {{#if user.Followings.length}}
        {{#each user.Followings}}
        <a href="/users/{{this.id}}" class="me-2" style="text-decoration:none;">
          <img style="height: 75px; width: 75px;" src="{{this.image}}" alt="{{this.name}}">
        </a>
        {{/each}}
        {{else}}
        <h5>No Followings</h5>
        {{/if}}
      </div>
    </div>
    
    {{!-- Follower --}}
    <div class="card mx-auto mt-3">
      <div class="card-header">
        {{user.Followers.length}} Followers (追隨者)
      </div>
      <div class="card-body">
        {{#if user.Followers.length}}
        {{#each user.Followers}}
         <a href="/users/{{this.id}}" class="me-2" style="text-decoration:none;">
          <img style="height: 75px; width: 75px;" src="{{this.image}}" alt="{{this.name}}" >
         </a>
        {{/each}}
        {{else}}
        <h5>No Followings</h5>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-6">

    {{!-- 已評論的餐廳 --}}
    <div class="card mx-auto mt-3">
      <div class="card-header">
        {{comments.length}} 家已評論餐廳
      </div>
      <div class="card-body">
        {{#if comments.length}}
        {{#each comments}}
        <a href="/restaurants/{{this.Restaurant.id}}" class="me-2" style="text-decoration:none;">
          <img style="height: 75px; width: 75px;" src="{{this.Restaurant.image}}" alt="{{this.Restaurant.name}}">
        </a>
        {{/each}}
        {{else}}
        <h5>No restaurant comments yet</h5>
        {{/if}}
      </div>
    </div>

    {{!-- 已收藏的餐廳 --}}
    <div class="card mx-auto mt-3">
      <div class="card-header">
        {{user.FavoritedRestaurants.length}} 家已收藏餐廳
      </div>
      <div class="card-body">
        {{#if user.FavoritedRestaurants.length}}
        {{#each user.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}" class="m-2" style="text-decoration:none;">
          <img style="height: 75px; width: 75px;" src="{{this.image}}" alt="{{this.name}}">
        </a>
        {{/each}}
        {{else}}
        <h5>No favorite restaurant yet</h5>
        {{/if}}
      </div>
    </div>
  </div>
</div>